<script>
  const musicBtn = document.getElementById('music-btn');
  const bgMusic = document.getElementById('bg-music');
  let isPlaying = false;

  musicBtn.addEventListener('click', () => {
    if (!isPlaying) {
      bgMusic.play();
      musicBtn.textContent = 'â¸ï¸ Henti Muzik';
      isPlaying = true;
    } else {
      bgMusic.pause();
      bgMusic.currentTime = 0;
      musicBtn.textContent = 'â–¶ï¸ Main Muzik';
      isPlaying = false;
    }
  });

  bgMusic.addEventListener('ended', () => {
    musicBtn.textContent = 'â–¶ï¸ Main Muzik';
    isPlaying = false;
  });
</script>

